{
  "compilerOptions": {
    "target": "es2020",
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "./dist",
    "moduleResolution": "node",
    "baseUrl": "src",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": [
        "*"
      ]
    }
  }
}